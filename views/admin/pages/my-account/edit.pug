extends ../../layouts/default.pug
include ../../mixins/alert

block main
  +alert-error(3000)
  +alert-success(3000)
  h1(class="mb-4") Chỉnh sửa sản phẩm
  
  form(action=`${prefixAdmin}/my-account/edit?_method=PATCH` method="POST" enctype="multipart/form-data")
    div(class="form-group")
      label(for="fullName") Họ tên 
      input(type="text" id="fullName" name="fullName" class="form-control" value=user.fullName required)

    div(class="form-group")
      label(for="email") Email 
      input(type="email" id="email" name="email" class="form-control" value=user.email required)
    
    div(class="form-group")
      label(for="password") Mật Khẩu
      input(type="password" id="password" name="password" class="form-control")
    
    div(class="form-group")
      label(for="phone") Số điện thoại
      input(type="text" id="phone" name="phone" value=user.phone class="form-control")

    div(class="form-group" upload-image)
      label(for="avatar") Avatar
      input(type="file" id="avatar" name="avatar" accept="image/*" class="form-control-file" upload-image-input)
      img(src=user.avatar class="image-preview" upload-image-preview)

    div(class="form-group")
      button(type="submit" class="btn btn-primary") cập nhật