mixin select-tree(items, id = "",  level = 1)
  each item in items
    - const prefix= Array(level + 1).join("-- ")
    option(value=item.id selected = item.id == id ? true : false) #{prefix}#{item.title}
      if item.children && item.children.length > 0
        +select-tree(item.children, id , level + 1)