
mixin alert-success(time)
  - if (messages.success)
    .message.info 
      div(
        class="alert alert-success"
        data-time=time
        show-alert
       ) #{messages.success} <span close-alert><img width="12" height="12" src="https://img.icons8.com/sf-regular-filled/48/x.png" alt="x"/></span>

mixin alert-error(time)
  - if (messages.error)
    .message.info 
      div(
        class="alert alert-danger"
        data-time=time
        show-alert
       ) #{messages.error} <span close-alert><img width="12" height="12" src="https://img.icons8.com/sf-regular-filled/48/x.png" alt="x"/></span>
