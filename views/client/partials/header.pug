include ../mixins/sub-menu.pug

header.header 
  .container 
    .row.align-items-center  
      .col-3
        .inner-logo
          a(href="/")
            img(src=settingGeneral ? settingGeneral.logo : "" , alt="logo")
      .col-5 
        form(
          action="/search"
          method="GET"
        )
          div(class="form-group d-flex mb-0")
            input(
              type="text"
              placeholder="Nhập Từ Khóa"
              class="form-control"
              name="keyword"
            )
            button(
              type="submit"
              class="btn btn-primary"
            ) Tìm
      .col-4
        .inner-menu
          ul 
            li
              a(href="/") Trang chủ
            li(class="sub-menu")
              -const pathProduct ="/products" 
              a(href=pathProduct)  Sản phẩm
                +sub-menu(layoutProductsCategory, pathProduct)
            li 
              a(
                href="/cart"
              ) Giỏ hàng (#{miniCart ? miniCart.totalQuantity : 0})
            if(user)
              li
                a(href="/chat") chat
              li
                a(href="/user/logout") Đăng xuất
              li
                a(href="/user/info") #{user.fullName}
            else 
              li
                a(href="/user/register") Đăng kí
              li
                a(href="/user/login") Đăng nhập
                   

  

  