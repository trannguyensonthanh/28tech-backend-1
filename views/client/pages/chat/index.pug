extends ../../layouts/default.pug
include ../../mixins/box-head.pug


block main 
  .container.my-3 

    include ../../partials/list-btn-users.pug

    .row 
      .col-12
        +box-head(pageTitle)

    .row 
      .col-12 
        .chat(my-id=user.id)
          //- .inner-head 
          //-   .inner-avatar EY 
          //-   .inner-name EM YÊU 
          .inner-body 
            each chat in chats     
              div(class=(chat.infoUser.id == user.id ? "inner-outgoing" : "inner-incoming"))
                if(chat.infoUser.id != user.id)
                  .inner-name #{chat.infoUser.fullName} 
                if(chat.content)
                  .inner-content
                    | #{chat.content}
                if(chat.images)
                  .inner-images
                    each image in chat.images
                      img(src=image)
            div(class="inner-list-typing")
          .inner-preview-images
            div(class="custom-file-container" data-upload-id="upload-image")
          .inner-foot
            form(
              class="inner-form"
              action=""
            )
              input(
                type="text"
                placeholder="Nhập nội dung..."
                name="content"
              )
              label(for="file-upload-with-preview-upload-image" class="btn btn-light mx-2 mb-0")
                img(width="24" height="24" src="https://img.icons8.com/material-outlined/24/image.png" alt="image")
              span(class="button-icon btn btn-light mx-2") 
                img(src="https://img.icons8.com/windows/32/grinning-face.png" alt="grinning-face")
              button
                i.fa-solid.fa-paper-plane

  div(class="tooltip" role="tooltip")
    emoji-picker

block script 
  script(type="module", src="/js/chat.js")

            
            
