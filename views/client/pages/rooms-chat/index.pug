extends ../../layouts/default.pug
include ../../mixins/box-head.pug


block main
    .container.my-3
      .row 
        .col-12 
          +box-head("Danh sách phòng")
    
      .row.mb-3
        .col-12 
          a(
            href="/rooms-chat/create"
            class="btn btn-sm btn-success mr-1"
          ) Tạo phòng chat

      .row 
        each roomChat in listRoomChat
          .col-6
            div(class="box-room")
              div(class="inner-avatar")
                img(
                  src="https://i.pinimg.com/236x/22/8a/70/228a70c4f16df072a6fd837f974b2ede.jpg"
                  alt=roomChat.title
                )
              div(class="inner-info")
                if(roomChat.title)
                  div(class="inner-name") #{roomChat.title}
                else 
                  div(class="inner-name") #{roomChat.nameRoom}                  
                div(class="inner-buttons")
                  a(
                    href=`/chat/${roomChat._id}`
                    class="btn btn-sm btn-primary mr-1"
                  ) Nhắn tin 